<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/txt2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:id="@+id/input1"
        android:hint="Enter your name"
        android:paddingLeft="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_above="@id/input1"
        android:layout_centerInParent="true"
        android:textSize="32sp"
        android:textColor="@color/violet"
        android:id="@+id/txt1"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill Level:"
        android:layout_above="@id/rad1"
        android:layout_alignStart="@id/input1"
        android:textColor="@color/black"
        android:id="@+id/txt2"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chk1"
        android:layout_alignStart="@id/input1"
        android:text="Beginner"
        android:id="@+id/rad1"
        android:checked="false"
        android:layout_marginTop="1dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chk1"
        android:layout_toRightOf="@id/rad1"
        android:layout_marginLeft="25dp"
        android:text="Intemediate"
        android:id="@+id/rad2"
        android:checked="false"
        android:layout_marginTop="1dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chk1"
        android:layout_toRightOf="@id/rad2"
        android:layout_marginLeft="25dp"
        android:text="Advanced"
        android:id="@+id/rad3"
        android:checked="false"
        android:layout_marginTop="1dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_me"
        android:layout_above="@id/btn1"
        android:layout_alignStart="@id/input1"
        android:id="@+id/chk1"
        android:checked="false"
        android:layout_marginTop="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_me"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btn1"
        android:onClick="btnHandler"
    />


</RelativeLayout>